{
  "manifest_version": 3,
  "name": "Hunter Email Finder Pro",
  "version": "1.0.0",
  "description": "Encontre emails profissionais usando a API do Hunter",
  "permissions": [
    "activeTab",
    "storage",
    "https://api.hunter.io/*"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Hunter Email Finder"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["*://*/*"]
    }
  ]
}